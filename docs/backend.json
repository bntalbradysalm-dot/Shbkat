
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Shabakat Wallet application.",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "phoneNumber": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "photoURL": { "type": "string", "format": "uri" },
        "registrationDate": { "type": "string", "format": "date-time" },
        "balance": { "type": "number" },
        "accountType": { "type": "string", "enum": ["user", "network-owner"] }
      },
      "required": ["id", "phoneNumber", "firstName", "lastName", "registrationDate"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string" },
        "category": { "type": "string" },
        "stock": { "type": "number" }
      },
      "required": ["name", "price", "imageUrl"]
    },
    "StoreOrder": {
      "title": "Store Order",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "userPhone": { "type": "string" },
        "productId": { "type": "string" },
        "productName": { "type": "string" },
        "amount": { "type": "number" },
        "address": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "shipped", "delivered", "cancelled"] },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "productId", "amount", "address", "status", "timestamp"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": { "$ref": "#/backend/entities/Product" },
          "description": "Stores products available in Star Media Store."
        }
      },
      {
        "path": "/storeOrders/{orderId}",
        "definition": {
          "entityName": "StoreOrder",
          "schema": { "$ref": "#/backend/entities/StoreOrder" },
          "description": "Stores customer orders from the store."
        }
      }
    ]
  }
}
