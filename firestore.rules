rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * وظيفة للتحقق من أن المستخدم مسجل دخول.
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    /**
     * تم فتح جميع الصلاحيات (القراءة والكتابة) لكل المستخدمين المسجلين.
     * هذا يسمح للمستخدمين وملاك الشبكات بإجراء عمليات الشراء والتحويل والإدارة دون قيود برمجية.
     * القواعد تطبق على كافة المجموعات (users, networks, soldCards, transactions, etc.)
     * تم تحديث القواعد لضمان منح المستخدم العادي صلاحيات واسعة مثل مالك التطبيق في الشراء.
     * تم إضافة هذا التعليق لضمان تحديث القواعد: FORCE_UPDATE_PERMISSIONS_V3
     */
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}