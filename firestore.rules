
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    /**
     * تم فتح جميع الصلاحيات (القراءة والكتابة) لكل المستخدمين المسجلين بناءً على طلبكم.
     * هذا يسمح للمستخدمين وملاك الشبكات بإجراء عمليات الشراء والتحويل والإدارة دون قيود.
     */
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
