
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth.token.email == '770326828@shabakat.com';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /products/{productId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /storeOrders/{orderId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow list: if isAdmin();
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      match /transactions/{transactionId} {
        allow create: if isOwner(userId);
        allow get: if isOwner(userId) || isAdmin();
        allow update, delete: if isOwner(userId);
      }
      match /transactions { allow list: if isOwner(userId) || isAdmin(); }
      
      match /favorites/{favoriteId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }
      
      match /notifications/{notificationId} {
          allow read: if isOwner(userId);
          allow create: if isAdmin() || isSignedIn();
          allow delete: if isOwner(userId);
          allow update: if false;
      }
    }

    match /networks/{networkId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAdmin() || get(/databases/$(database)/documents/networks/$(networkId)).data.ownerId == request.auth.uid;

      match /cardCategories/{categoryId} {
        allow read: if isSignedIn() || isAdmin();
        allow write: if isAdmin() || get(/databases/$(database)/documents/networks/$(networkId)).data.ownerId == request.auth.uid;
      }

      match /cards/{cardId} {
        allow read: if isSignedIn() || isAdmin();
        allow create, delete: if isAdmin() || get(/databases/$(database)/documents/networks/$(networkId)).data.ownerId == request.auth.uid;
        allow update: if isSignedIn();
      }
    }

    match /alwadiOptions/{optionId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /advertisements/{adId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /notifications/{notificationId} { allow read: if isSignedIn(); allow create, delete: if isAdmin(); allow update: if false; }
    match /renewalRequests/{requestId} { allow create: if isSignedIn(); allow read, update, delete: if isAdmin(); }
    match /billPaymentRequests/{requestId} { allow create: if isSignedIn(); allow read, update, delete: if isAdmin(); }
    match /withdrawalRequests/{requestId} { allow create: if isSignedIn(); allow read, update, delete: if isAdmin(); }
    match /paymentMethods/{methodId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /appSettings/{settingsId} { allow read: if true; allow write: if isAdmin(); }
    match /soldCards/{cardId} { allow create: if isSignedIn(); allow get: if isAdmin() || resource.data.buyerId == request.auth.uid; allow list, update: if isAdmin(); allow delete: if false; }
    match /processedReceipts/{receiptId} { allow get: if isSignedIn() || isAdmin(); allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid; allow list, update, delete: if false; }
  }
}
